{
  "name": "myfamilylink",
  "version": "1.0.0",
  "description": "Malaysia's first privacy-preserving aid distribution engine with Zero-Knowledge Proofs",
  "private": true,
  "workspaces": [
    "apps/admin",
    "apps/citizen",
    "apps/backend",
    "packages/shared"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:admin\" \"npm run dev:citizen\" \"npm run dev:backend\"",
    "dev:admin": "npm run dev --workspace=apps/admin",
    "dev:citizen": "npm run dev --workspace=apps/citizen",
    "dev:backend": "npm run dev --workspace=apps/backend",
    "build": "npm run build --workspaces",
    "build:admin": "npm run build --workspace=apps/admin",
    "build:citizen": "npm run build --workspace=apps/citizen",
    "build:backend": "npm run build --workspace=apps/backend",
    "lint": "npm run lint --workspaces",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "clean": "rimraf **/node_modules **/dist **/build",
    "test": "npm run test --workspaces"
  },
  "keywords": [
    "myfamilylink",
    "aid-distribution",
    "zero-knowledge-proofs",
    "nfc",
    "mykad",
    "malaysia"
  ],
  "author": "BlockNexa Labs",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/blocknexalabs/myfamilylink"
  }
}
